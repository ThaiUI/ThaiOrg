---
import Base from './Base.astro';
const {
  title,
  description,
  bodyclass = '',
  cover = '/cover.png',
} = Astro.props;
---

<Base
  title={title}
  description={description}
  bodyclass={bodyclass}
  cover={cover}
>
  <main
    id='content'
    class='w-full width-sm:max-w-th-width-sm max-w-th-width-lg mx-auto px-4 md:px-5 pb-4 md:pb-5 lg:pb-6 xl:pb-[30px]'
  >
    <slot />
  </main>
</Base>
